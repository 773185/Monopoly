package monopoly;

/**
 *
 * @author 761843
 */
public class Player {
    private int playernum;
    private String name;
    private String piecename;
    private int bank;
    private int space;
    
    public Player(String name1, int position, String piece){
        playernum=position;
        name=name1;
        piecename=piece;
        bank = 1000;
        space=1;
    }
    
    public int getMoney(){
        return bank;
    }
    public String toString(){
        return "Player"+playernum+" is "+name+" and they currently have "+bank+" Swanny dollars";
    }
    public void move(int roll){
        space= space + roll;
        if(space>40){
            space=space-40;
        }
    }
    public int getPosition(){
        return space;
    }
    public void changemoney(int a){
        if(a>bank){
            System.out.println("You can't make that purchase. You only have "+bank+" Swanny Dollars remaining.");
        }else{
            bank = bank-a;
            System.out.println("Congrats you purchased the property. You have "+ bank+" Swanny Dollars remaining.");
        }
        
    }
    public void earnrent(int a){
        bank = bank +a;
    }
}
